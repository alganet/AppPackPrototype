<!doctype html>
<title>&nbsp;</title>
<meta charset="utf-8" />
<hta:application
  version="1.0"
  icon="../Resources/AppPack.ico"
  bordersyle=complex
  singleinstance=yes
  scrollflat=yes
  navigable=yes
  scroll=auto
  maximizebutton=yes
  minimizebutton=yes
  innerborder=no
  id="App"
  sysmenu=yes
  showintaskbar=yes
  caption=yes
  border=dialog
  applicationname=AppPack />
<style>
body, html, iframe {
  width: 100%;
  height: 100%;
  border: 0; margin: 0; padding: 0;
  overflow: hidden;
  display: block;
}
</style>
<script>
  window.onload = function () {
    window.resizeTo(480, 320);
    var frameContainer = document.createElement('iframe');
    frameContainer.frameBorder = 0;
    frameContainer.scrolling = 'no';
    frameContainer.src = App.commandLine.split(" ")[1];
    frameContainer.setAttribute('application', 'yes');
    document.getElementsByTagName("body")[0].appendChild(frameContainer);
  }
</script>
